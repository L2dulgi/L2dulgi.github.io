{
  "site": {
    "title_template": "{name} - AI Research Portfolio",
    "sections": {
      "about": "About Me",
      "publications": "Publications"
    },
    "hero": {
      "actions": [
        {
          "text": "Publications",
          "href": "#publications",
          "class": "btn btn-primary"
        },
        {
          "text": "Download CV",
          "href": "cv/DaeheeLee_CV.pdf",
          "class": "btn btn-outline",
          "target": "_blank",
          "icon": "fas fa-download"
        }
      ],
      "stats": [
        {
          "id": "stat-papers", 
          "label": "Published Papers",
          "source": "publications_count"
        }
      ],
      "social_links": [
        {
          "icon": "fas fa-graduation-cap",
          "title": "Google Scholar",
          "href_source": "googleScholar"
        },
        {
          "icon": "fab fa-linkedin",
          "title": "LinkedIn", 
          "href_source": "linkedin"
        },
        {
          "icon": "fas fa-envelope",
          "title": "Email",
          "href_source": "email"
        }
      ]
    },
    "publications": {
      "stats": [
        {
          "icon": "fas fa-file-alt",
          "label": "Total Papers",
          "source": "total_papers"
        },
        {
          "icon": "fas fa-quote-right", 
          "label": "Citations",
          "source": "total_citations"
        },
        {
          "icon": "fas fa-chart-line",
          "label": "h-index",
          "source": "h_index"
        }
      ],
      "filters": {
        "years": {
          "label": "All Years",
          "source": "years_active"
        },
        "types": {
          "label": "All Types",
          "options": ["conference", "journal", "workshop", "preprint"]
        }
      }
    },
    "footer": {
      "template": "&copy; {year} {name}. All rights reserved."
    }
  }
}